<?xml version="1.0" encoding="utf-8"?>
<!-- 1. Cambia LinearLayout por ConstraintLayout -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.MapaFragment">


        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:mapId="@string/map_id"
            app:layout_constraintTop_toBottomOf="@+id/lyLeyenda"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_titleMap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@color/background_app"
            android:fontFamily="@font/anton"
            android:paddingVertical="10dp"
            android:text="@string/title_map"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/lyLeyenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/white"

            app:layout_constraintTop_toBottomOf="@+id/tv_titleMap"
            app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/titleLeyenda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leyenda: "
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/anton" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visitados: "
                    android:fontFamily="@font/anton" />


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/pin_visitado"
                    android:layout_marginEnd="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Visitados: "
                    android:fontFamily="@font/anton" />


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/pin_no_visitado"/>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardRestauranteMap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:visibility="gone"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp">

                                <ImageView
                                    android:id="@+id/imagenRestauranteMap"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginEnd="10dp"
                                    android:scaleType="centerCrop"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                        <TextView
                                            android:id="@+id/nombreRestauranteMap"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:textSize="18sp"
                                            android:textStyle="bold"
                                            android:fontFamily="@font/anton"
                                            android:textColor="@android:color/black"/>

                                        <TextView
                                            android:id="@+id/direccionRestauranteMap"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:drawableStart="@drawable/baseline_location_pin_24"
                                            android:drawablePadding="8dp"
                                            android:gravity="center_vertical"/>

                                        <TextView
                                            android:id="@+id/telefonoRestauranteMap"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:drawableStart="@drawable/baseline_phone_24"
                                            android:drawablePadding="8dp"
                                            android:gravity="center_vertical"/>

                                        <RatingBar
                                            android:id="@+id/ratingBarMap"
                                            style="?android:attr/ratingBarStyleIndicator"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:numStars="5"
                                            android:stepSize="0.5"
                                            android:theme="@style/RatingBar"
                                            android:layout_gravity="center"/>

                                </LinearLayout>

                        </LinearLayout>
                        <Button
                            android:id="@+id/btnVerEnMaps"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/anton"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="@color/background_app"
                            android:text="Ver en Google Maps"/>

                </LinearLayout>
        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>


