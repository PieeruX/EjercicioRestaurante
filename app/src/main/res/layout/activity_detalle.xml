<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    tools:context=".ui.activities.DetalleActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:alpha="0.1"
            android:scaleType="fitCenter"
            android:layout_gravity="top"
            android:src="@drawable/background_food"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:src="@drawable/background_food"
            android:scaleType="fitCenter"
            android:layout_gravity="bottom"
            android:alpha="0.1"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/tvTittleDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/anton"
        android:gravity="center"
        android:text="@string/tv_titlle_detalles"
        android:textColor="@color/color_texto"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnLlamar"
        app:layout_constraintTop_toBottomOf="@id/tvTittleDetalle"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgDetalle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/img_restuarante1" />


        <TextView
            android:id="@+id/tvDetalleNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/anton"
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:text="Nombre del Restaurante" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/ratingBarDetalle"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:theme="@style/RatingBar" />

            <TextView
                android:id="@+id/tvDetallePuntuacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/anton"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="4.5" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvDetalleDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="24dp"
            android:drawableStart="@drawable/baseline_location_pin_24"
            android:drawablePadding="8dp"
            android:drawableTint="@color/white"
            android:fontFamily="@font/anton"
            android:gravity="center_vertical"
            android:textColor="@color/color_texto"
            android:textSize="18sp"
            tools:text="Calle Falsa, 123" />


        <TextView
            android:id="@+id/tvDetalleTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="24dp"
            android:drawableStart="@drawable/baseline_phone_24"
            android:drawablePadding="8dp"
            android:drawableTint="@color/white"
            android:fontFamily="@font/anton"
            android:gravity="center_vertical"
            android:textColor="@color/color_texto"
            android:textSize="18sp"
            tools:text="999999999" />


        <TextView
            android:id="@+id/tvDetalleCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/baseline_restaurant_24"
            android:drawablePadding="8dp"
            android:layout_marginHorizontal="24dp"
            android:drawableTint="@color/white"
            android:fontFamily="@font/anton"
            android:gravity="center_vertical"
            android:textColor="@color/color_texto"
            android:textSize="18sp"
            tools:text="CategorÃ­a: Restaurante" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="10dp"
            android:background="#4A4A4A"
            android:backgroundTint="@color/white" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/anton"
            android:text="@string/tv_comentario_detalles"
            android:textColor="@color/white"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tvDetalleComentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/anton"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </LinearLayout>




    <Button
        android:id="@+id/btnLlamar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/anton"
        android:text="Hacer reserva"
        android:layout_marginBottom="50dp"
        android:textColor="@color/background_app"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnSalir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etComentario" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/anton"
        android:text="Salir"
        android:layout_marginBottom="50dp"
        android:textColor="@color/background_app"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnLlamar"
        app:layout_constraintTop_toBottomOf="@+id/etComentario" />


</androidx.constraintlayout.widget.ConstraintLayout>
