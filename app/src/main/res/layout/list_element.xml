<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgVCardView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/lyBotones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnEditar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Editar"
                android:src="@drawable/baseline_edit_24" />

            <ImageButton
                android:id="@+id/btnEliminar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Eliminar"
                android:src="@drawable/baseline_delete_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvNombreCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgVCardView"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/anton"
            android:text="Nombre del Restaurante"
            android:textSize="18sp"
            android:layout_toStartOf="@id/lyBotones"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tvDireccionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNombreCard"
            android:layout_toEndOf="@id/imgVCardView"
            android:fontFamily="@font/anton"
            android:text="Direccion" />


        <TextView
            android:id="@+id/tvTelefonoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDireccionCard"
            android:layout_toEndOf="@id/imgVCardView"
            android:fontFamily="@font/anton"
            android:text="Telefono" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tvTelefonoCard"
            android:layout_toEndOf="@id/imgVCardView"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <RatingBar
                android:id="@+id/ratingBarCard"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:theme="@style/RatingBar" />


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
